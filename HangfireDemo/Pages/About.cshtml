@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="submit" asp-page-handler="MailNow" value="Send Mail" class="btn btn-default" />
                <input type="submit" asp-page-handler="MailJob" value="Start Mail Job" class="btn btn-default" />
                <input type="submit" asp-page-handler="DelayJob" value="Start Delay Job" class="btn btn-default" />
                <input type="submit" asp-page-handler="ScheduleJob" value="Schedule Job" class="btn btn-default" />
                <input type="submit" asp-page-handler="ContinueJob" value="Continued Job" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<p>Use this area to provide additional information.</p>
